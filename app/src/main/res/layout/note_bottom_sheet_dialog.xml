<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/take_photo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/take_photo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Take photo"
        app:layout_constraintStart_toEndOf="@id/take_photo_iv"
        app:layout_constraintTop_toTopOf="@id/take_photo_iv" />

    <ImageView
        android:id="@+id/add_image_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_image"
        app:layout_constraintStart_toStartOf="@+id/take_photo_iv"
        app:layout_constraintTop_toBottomOf="@id/take_photo_iv" />

    <TextView
        android:id="@+id/add_image_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add image"
        app:layout_constraintBottom_toBottomOf="@+id/add_image_iv"
        app:layout_constraintStart_toStartOf="@+id/take_photo_tv"
        app:layout_constraintTop_toTopOf="@id/add_image_iv" />

    <ImageView
        android:id="@+id/drawing_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_draw"
        app:layout_constraintStart_toStartOf="@+id/add_image_iv"
        app:layout_constraintTop_toBottomOf="@id/add_image_iv" />

    <TextView
        android:id="@+id/drawing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drawing"
        app:layout_constraintBottom_toBottomOf="@+id/drawing_iv"
        app:layout_constraintStart_toStartOf="@+id/add_image_tv"
        app:layout_constraintTop_toTopOf="@id/drawing_iv" />

    <ImageView
        android:id="@+id/recording_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_mic"
        app:layout_constraintStart_toStartOf="@+id/drawing_iv"
        app:layout_constraintTop_toBottomOf="@id/drawing_iv" />

    <TextView
        android:id="@+id/recording_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording"
        app:layout_constraintBottom_toBottomOf="@+id/recording_iv"
        app:layout_constraintStart_toStartOf="@+id/drawing_tv"
        app:layout_constraintTop_toTopOf="@id/recording_iv" />

    <ImageView
        android:id="@+id/checkboxes_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_check_box"
        app:layout_constraintStart_toStartOf="@+id/recording_iv"
        app:layout_constraintTop_toBottomOf="@id/recording_iv" />

    <TextView
        android:id="@+id/checkboxes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkboxes"
        app:layout_constraintBottom_toBottomOf="@+id/checkboxes_iv"
        app:layout_constraintStart_toStartOf="@+id/recording_tv"
        app:layout_constraintTop_toTopOf="@id/checkboxes_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>